<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigator"
    app:startDestination="@id/mainFragment">

    <!-- MainFragment where you enter your name -->
    <fragment
        android:id="@+id/mainFragment"
        android:name="com.example.myapplication.fragments.MainFragment"
        android:label="fragment_main"
        tools:layout="@layout/fragment_main">

        <action
            android:id="@+id/action_mainFragment_to_clickPage"
            app:destination="@id/clickPage" />
    </fragment>


    <fragment
        android:id="@+id/clickPage"
        android:name="com.example.myapplication.fragments.MainFragment"
        android:label="fragment_click"
        tools:layout="@layout/fragment_click">
    </fragment>

</navigation>
